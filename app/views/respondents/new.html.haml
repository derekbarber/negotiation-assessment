.row
  / NEW COL START
  %article.col-sm-12.col-md-12.col-lg-6.sortable-grid.ui-sortable

    #wid-id-8.jarviswidget.jarviswidget-sortable{"data-widget-custombutton" => "false", "data-widget-editbutton" => "false", :role => "widget", :style => ""}
      %header{:role => "heading"}
        %span.widget-icon
          %i.fa.fa-edit
        %h2 Get started
        %span.jarviswidget-loader
          %i.fa.fa-refresh.fa-spin
      / widget div
      %div{:role => "content"}
        / widget edit box
        .jarviswidget-editbox
          / This area used as dropdown edit box
        / end widget edit box
        / widget content
        .widget-body.no-padding
          = form_for @respondent, :html => {class: "smart-form"} do |f|
            = render "shared/error_messages", :f => @respondent

            %header Please enter your details to begin the assessment process

            %fieldset
              .row
                %section.col.col-6
                  %label.input
                    %i.icon-prepend.fa.fa-user
                    = f.text_field :first_name, :placeholder => "First Name"
                %section.col.col-6
                  %label.input
                    %i.icon-prepend.fa.fa-user
                    = f.text_field :last_name, :placeholder => "Last Name"
              .row
                %section.col.col-6
                  %label.input
                    %i.icon-prepend.fa.fa-envelope-o
                    = f.text_field :email, :type => "email", :placeholder => "Your Email"
                %section.col.col-6
                  %label.input
                    %i.icon-prepend.fa.fa-phone
                    %input{"data-mask" => "(999) 999-9999", :name => "phone", :placeholder => "Phone", :type => "tel"}/

            %fieldset
              %legend Your Access Code
              %section.col.col-2
                %label.input
                  = text_field_tag "access_code[org]", '',  maxlength: 3
              %section.col.col-1
                %h1
                  \–
              %section.col.col-2
                %label.input
                  = text_field_tag "access_code[user]", '',  maxlength: 3
              %section.col.col-1
                %h1
                  \–
              %section.col.col-2
                %label.input
                  = text_field_tag "access_code[assessment]", '',  maxlength: 3

            %footer
              %button.btn.btn-primary{:type => "submit"}
                Proceed


  %p
