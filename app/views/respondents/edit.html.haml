- provide(:title, 'Your Profile')

.col-xs-12.col-sm-7.col-md-7.col-lg-4
  %h1.page-title.txt-color-blueDark
    %i.fa.fa-user.fa-fw
    Your Profile

.row
  %div.col-sm-12.col-md-12.col-lg-8
    .jarviswidget
      %header
        %h2 Edit your profile
      / widget div
      %div{:role => "content"}
        / widget edit box
        .widget-body

          = form_for(@user, :html => {class: 'form-horizontal'}) do |f|

            = render "shared/error_messages", :f => @user

            %ul#myTab1.nav.nav-tabs.bordered
              %li.active
                %a{"data-toggle" => "tab", :href => "#s1"}
                  %i.fa.fa-fw.fa-lg.fa-user
                  Basic Info
              %li
                %a{"data-toggle" => "tab", :href => "#s2"}
                  %i.fa.fa-fw.fa-lg.fa-lock
                  Password









