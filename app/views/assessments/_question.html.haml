          %span.ui-slider-line
          %span.ui-slider-label{"data-value" => "4"} 4
        %span.ui-slider-pip.ui-slider-pip-5{:style => "left: 71.0000%"}
          %span.ui-slider-line
          %span.ui-slider-label{"data-value" => "5"} 5
        %span.ui-slider-pip.ui-slider-pip-6{:style => "left: 85.2000%"}
