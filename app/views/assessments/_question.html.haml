.row
  .col-sm-10.col-sm-offset-1
    %h6
      = question.question_text

%br

.row
  .col-sm-2.col-xs-3
    Not at all Characteristic
  .col-sm-8.col-xs-6
    .form-group
      .ui-slider.ui-slider-horizontal.ui-widget.ui-widget-content.ui-corner-all.ui-slider-pips{'aria-disabled' => 'false', :id => "question#{question.id}"}
        %a.ui-slider-handle.ui-state-default.ui-corner-all{:href => "#", :style => "left: 35%;"}
        %span.ui-slider-pip.ui-slider-pip-first.ui-slider-pip-label.ui-slider-pip-0{:style => "left: 0%"}
          %span.ui-slider-line
          %span.ui-slider-label{"data-value" => "0"} 0
